FoamFile
{
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1e-3;

vertices
(
    (0 0 0)
    (.75 0 0)
    (0.6 8 0)
    (0.15 8 0)
    (0 0 .1)
    (.75 0 .1)
    (0.6 8 .1)
    (0.15 8 .1)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (15 160 1) simpleGrading (1 1 1)
);

boundary
(
    minY
    {
        type patch;
        faces
        (
            (1 5 4 0)
        );
    }
    maxY
    {
        type patch;
        faces
        (
            (3 7 6 2)
        );
    }
    walls
    {
        type wall;
        faces
        (
            (0 4 7 3)
            (2 6 5 1)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);



